{
  "name": "lexnexus",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @lexnexus/api dev\" \"pnpm --filter @lexnexus/web dev\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "db:migrate": "pnpm --filter @lexnexus/db db:migrate",
    "db:seed": "pnpm --filter @lexnexus/db db:seed"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "typescript": "^5.9.2"
  }
}
